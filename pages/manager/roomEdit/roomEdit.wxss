@import '../addSubject/addSubject.wxss';

.roomEdit{
  position: relative;
}
.formItem{
  padding-left:10px;
  padding-top:10px;
  padding-bottom:10px;
  border-bottom:1px solid RGBA(239,239,239,1);
}

.formItemLabel{
  font-size:20px;
  color:black;
  display:inline-block;
  width:20%;
  vertical-align: top;
}

.formItemContent{
  display:inline-block;
  width:60%;
  text-align: right;
  right:10px;
  color:RGBA(134,134,134,1);

}

.formItemFooter{
  width:15%;
  color:RGBA(134,134,134,1);
  font-size:20px;

  right: 10px;

  text-align: right;
}

.labelList{
  border-bottom:1px solid RGBA(239,239,239,1);
}

.switchLabel{
  padding-left:10px;
  display: inline-block;
  padding-top:10px;
  padding-bottom:10px;
  
}

.switchLabelSwitch{
  padding-left:20px;
}

.switchLabelTitle{
  font-size:15px;
  display: inline-block;
}

.editForm{
  position: fixed;
  width:100%;
  height: 100vh;
  background:rgba(239,239,244,1);
  z-index:100000;
  top:0px;
}

.editFormInput{
  height:20px;
  margin: 0 auto;
  position: relative;
  padding-left:10px;
  padding-bottom:10px;
  padding-top:10px;
  background:white;
}

.editFormButton{
  background:white;
  color:black;
  margin-top:50px;
  width:100px;
}

.editFormLabel{
  font-size:10px;
  padding-left:10px;
  padding-top:20px;

  padding-bottom:10px;
}


