.rewardGood{
  width:100%;
  height: 100vh;
  background:RGBA(63,67,76,0.9);
  position: relative;
}

.rewardGoodBanner{
  text-align: center;
  position: relative;
  width:100%;
  
}

.rewardGoodBannerName{
  position: absolute;
  color: white;
  width: 100%;
  text-align: center;
  top:110px;
  font-size: 25px;
  font-weight: bolder;
}

.rewardGoodContent{
  text-align: center;
  font-size: 15px;
  color: white;
  position: absolute;
  top:170px;
  width: 100%;
  z-index: 3;
}

.rewardGoodDisplay{
  z-index:2;
  text-align: center;
  width:100%;
  position: relative;
  top:150px;
}

.rewardGoodDisplaySunshine{
  width:250px;
  height:250px;
  background:green;
  margin: 0 auto;
  position: relative;
}

.rewardGoodDisplayGood{
  width:250px;
  height: 250px;
  position: absolute;
  top:0px;
  margin: 0 auto;
  left:50%;
  margin-left:-125px;
}

.rewardGoodButton{
  top: 400px;
  position: absolute;
  z-index: 4;
  width:100px;
  height: 50px;
  color: white;
  border-radius: 20px;
  background:rgba(153,46,205,1);
  text-align: center;
  line-height: 50px;
  left:50%;
  margin-left:-50px;
  font-weight: bolder;

}