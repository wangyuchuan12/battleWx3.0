<view class="rewardGood">
  <view class="rewardGoodBanner">
    <image src="{{rewardImg}}" style="width:100%;height:300px;position:absolute;left:0px;top:0px;"></image>
    <view class="rewardGoodBannerName">{{title}}</view>
  </view>
  <view class="rewardGoodContent">{{content}}</view>

  <view class="rewardGoodDisplay">
    <view class="rewardGoodDisplaySunshine" style="background:url('{{sunshineimg}}');background-size:100% 100%;" animation="{{sunshineAnimation}}"></view>
    <view class="rewardGoodDisplayGood" style="background:url('{{goodImg}}');background-size:100% 100%;"></view>
  </view>
  <view class="rewardGoodButton" bindtap='buttonClick'>我知道了</view>
</view>
