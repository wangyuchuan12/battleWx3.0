.personSpace{
  width:100%;
  height: 100vh;
  position: relative;
}
.personSpaceMenus{
  margin-top:10vh;
  border-bottom: 1px solid rgba(236,236,236,1);
}
.personSpaceMenu{
  display: inline-block;
  width:45%;
  height:100px;
  border-radius:10px;
  position: relative;
}

.personSpaceMenuIcon{
  display: inline-block;
}

.personSpaceMenuContent{
  display: inline-block;
  padding-left:20px;
  font-size: 15px;
  color: white;
  vertical-align: top;
  padding-top:20px;
}

.personSpaceItems{
  height: 80vh;
}

.personSpaceItem{
  height: 150px;
  width:90%;
  border-bottom: 1px solid rgba(236,236,236,1);
  left:5%;
  position: relative;
}

.personSpaceItemImg{
  height: 60px;
  width:60px;
  position: relative;
  top:10px;
  display: inline-block;
  border-radius: 5px;
}

.personSpaceItemContent{
  display: inline-block;
  position: relative;
  left:20px;
  vertical-align: top;
}

.personSpaceItemContentName{
  font-size:20px;
  font-weight: bolder;
  position: relative;
  top:10px;
}
.personSpaceItemContentName2{
  font-size:15px;
  position: relative;
  top:15px;
  color: rgba(144,144,144,1);
}

.personSpaceItemToolItems{
  padding-top:15px;
}

.personSpaceItemToolItem{
  display: inline-block;
  width:32%;
  text-align: center;
  border-left: 1px snow black;
  padding-top:10px;
  padding-bottom:10px;
  color: white;
}