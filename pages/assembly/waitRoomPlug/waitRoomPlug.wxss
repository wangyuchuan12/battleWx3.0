.waitRoomPlug{
  width:100%;
  height:100vh;
  position: fixed;
  z-index: 1000000000000000;
}
.waitRoomPlugHeader{
  width:100%;
  height: 45vh;
  background: rgba(107,122,119,0.1);
  text-align: center;
  line-height: 40px;
  position: relative;
}

.waitRoomPlugContent{
  width:100%;
  height: 55vh;
  background:rgba(148,167,165,0.1);
}

.waitRoomPlugHeaderButton{
  border: 1px solid white;
  width:150px;
  height: 40px;
  position: relative;
  left: 50%;
  margin-left:-75px;
  border-radius: 40px;
  text-align: center;
  line-height: 40px;
  font-weight: bolder;
  color: white;
  display: block;
}

.waitRoomPlugHeaderText{
  width:150px;
  height: 40px;
  position: relative;
  left: 50%;
  margin-left:-75px;
  border-radius: 40px;
  text-align: center;
  line-height: 40px;
  font-weight: bolder;
  color: rgba(189,199,198,1);
  display: block;
}

.waitRoomPlugContentMembers{
  width:90%;
  position: relative;
  left:50%;
  margin-left: -45%;
  padding-top:20px;
}

.waitRoomPlugContentMember{
  width:19%;
  height: 0;
  padding-bottom: 19%;
  margin-left:1%;
  margin-top:20px;
  background:rgba(139,158,156,0.5);
  display: inline-block;
  border-radius: 5px;
  position: relative;
  text-align: center;
}

.waitRoomButton{
  position: absolute;
  bottom:40px;
  width:70px;
  height: 70px;
  border: 2px solid white;
  border-radius: 100px;
  text-align: center;
  line-height: 70px;
  color: white;
  left: 50%;
  margin-left:-35px;
  font-weight: bolder;
}

.waitRoomPlugContentMemberHeader{
  position: absolute;
  font-size: 10px;
  color: white;
  top:-5px;
  width:70%;
  left:50%;
  margin-left:-35%;
  border-radius: 5px;
  padding-top:2px;
  padding-bottom:2px;
  background:green;
}

.waitRoomPlugContentMemberStatus{
  position: absolute;
  bottom:2px;
  font-size:10px;
  color: red;
  text-align: center;
  width:100%;
  background:rgba(0,0,0,0.1);
  padding-top:2px;
  padding-bottom:2px;
}