

@import '../baseLayerout/baseLayerout.wxss';

.battleHome{
  width:100%;
  height:100vh;
  padding-top:40px;
  background: rgba(49,64,93,1);
  position: fixed;
}

.battleHomeTool{
  text-align:right;
  padding-top:10px;
  padding-bottom:10px;
  padding-right:20px;
  color:white;
  
}

.battleHomeToolItem{
  display:inline-block;
  width:25%;
  text-align: center;
  margin-bottom:10px;
}

.battleHomeHeader{
  padding-top:10px;
  padding-bottom:10px;
  width:97%;
  background:rgba(38,75,140,0.5);
  margin-top:5px;
  margin: 0 auto;
  border-radius:5px;
}

.battleHomeHeaderImg{
  width:50px;
  height:50px;
  display:inline-block;
  left:10px;
  border-radius:10px;
  position: relative;
}

.battleHomeHeaderSelect{
  display:inline-block;
  width:40%;
  background:bule;
  color:white;
  vertical-align: top;
  text-align: center;
  left:20px;
  top:5px;
  position:relative;
  border-radius: 10px;
  padding-right:20px;
  border:2px solid RGBA(247,247,247,0.5);

  padding-top:5px;
  padding-bottom:5px;
  
}

.battleHomeHeaderSelectSpan1{
  display:inline-block;
  width:80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.battleHomeHeaderStart{
  display:block;
  position:relative;
  background: RGBA(245,173,56,1);
  border-radius:10px;
  color:white;
  float: right;
  padding-left:10px;
  padding-right:10px;
  padding-top:5px;
  padding-bottom:5px;
  right:10px;
  top:10px;
}

.battleHomeContentItem{
  background:rgba(38,75,140,0.5);
  width:100%;
  position: relative;
  text-align: left;
  padding-top:10px;
  padding-bottom:10px;
  margin-bottom:5px;
}

.battleHomeContentItemImage{
  width:40%;
  height:90px;
  position: relative;
  margin: 0 auto;
  display:inline-block;
  border-radius:10px;
  left:20px;
}

.battleHomeContentItemSmallImage{
  position: absolute;
  top:40px;
  left:30px;
  width:30px;
  height:30px;
  z-index:100;
  border-radius:10px;
}

.battleHomeContentItemPersonal{
  display:inline-block;
  vertical-align: top;
  padding-left:10px;
  padding-top:5px;
  width:45%;
  text-align: left;
}

.battleHomeContentItemPersonalName{
  color:red;
  position: absolute;
  border-radius:5px;
  top:20px;
  left:50%;
}

.battleHomeContentItemPersonalInstruction{
  font-size:10px;
  width:90%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  
}

.battleHomeContentItemFooter{
  display:block;
  font-size:12px;
  left:50%;
  top:50px;
  position: absolute;
  color: white;
}

.battleHomeContentMyself{
  background:rgba(38,75,140,0.5);
  margin: 5px;
  padding-top:10px;
  padding-bottom:10px;
}

.battleHomeContentMyselfIcon{
  display:inline-block;
  color:green;
  position: relative;
  padding-left:10px;
  font-size:20px;
}

.battleHomeContentMyselfName{
  display:inline-block;
  position: relative;
  padding-left:50px;
  color: white;
}


.battleHomeContentMyselfIcon2{
  float: right;
  right:10px;
  position: relative;
  color: white;
}

.battleHomeContentList{
  background: rgba(49,64,93,1);
}

.battleHomeFastEntryItem{
  display: inline-block;
  text-align: center;
  color: #fff;
  text-shadow:1px 1px 1px #333;
  border-radius: 5px;
  position: relative;
  overflow: hidden;
  background:RGBA(0,118,184,0.5);
  margin: 10px;
  width:30%;
  padding-top:10px;
}

.battleHomeFastEntry{
  text-align: center;
}


.battleHomeHeader{
  top:20px;
}

.battleHomeHeaderContent{
  width:70%;
  height:100%;
  display: inline-block;
  position: relative;
  left:20px;
  vertical-align: top;
  color: white;
}

.battleHomeProgress{
  width:100px;
  display: inline-block;
  position: relative;
  left:10px;
}

.battleHomeHeaderContentItem1{
  vertical-align: top;
}

.danList{
  width:100%;
  height:100vh;

  padding-top:100px;

  position: fixed;

  z-index: 50000;

}

.danItemSuccess{
  font-size:20px;
  color:red;
  position: absolute;
  left:20px;
  top:70px;
}

.danItemFree{
  font-size:20px;
  color:black;
  position: absolute;
  left:20px;
  top:70px;
}

.danItemIn{
  font-size:20px;
  color:white;
  position: absolute;
  left:20px;
  top:70px;
}

.danItemFail{
  font-size:20px;
  color:green;
  position: absolute;
  left:20px;
  top:70px;
}

.danListContent{
  height: 70vh;
  position: fixed;
  margin-top:0px;
}
.danItem{
  width:90%;
  height:150px;
  position: relative;
  margin: 0 auto;
  border-radius:10px;
  background: RGBA(37,75,140,0.1);
  margin-bottom:10px;
}

.danItemName{
  color: white;
  padding-left:20px;
  padding-top:20px;
  position: relative;
  font-size:20px;
  font-weight: bolder;
}

.danItemImg{
  width:100px;
  height:100px;
  position: absolute;
  right: 20px;
  top:20px;
}

.danLock{
  background:RGBA(82,82,82,0.2);
  width:100%;
  height: 100%;
  display: inline-block;
  position: absolute;
  z-index: 1000000;
  text-align: center;
}

.danLockContent{
  font-size:40px;
  position: relative;
  top:50px;
  color: black;
}

.battleHomeHeaderContentItem3{
  font-size:10px;
}

.battleHomeHeaderContentItem2{
  font-size:10px;
}

.danListInfo{
  width:80%;
  height:350px;
  position: fixed;
  background:rgba(255,249,229,1);
  z-index:10000000;
  top:80px;
  left:50%;
  margin-left:-40%;
  color: white;
  border-radius:10px;
}

.danListInfoContent{
  width:80%;
  height:100px;
  background:rgba(255,222,181,1);
  border-radius: 5px;
  margin: 0 auto;
  position: relative;
  top:20px;
  text-align: center;
  padding-top:10px;
}

.danListInfoContentRank{
  color: rgba(117,58,23,1);
}

.danListInfoContentImg{
  width:50px;
  height:50px;
}

.danListAlertMask{
  width:100%;
  height:100%;
  background:rgba(28,49,47,0.3);
  position: fixed;
  z-index: 100000;
  top:0px;
}

.danListInfoHeader{
  width:100%;
  background:rgba(255,230,155,1);
  border-radius:10px 10px 0px 0px;
  color: rgba(117,58,23,1);
  text-align: center;
  padding-top:10px;
  padding-bottom:10px;
  font-weight: bolder;
  font-size: 20px;
}

.danListInfoButtons{
  width:100%;
  height: 50px;
  position: absolute;
  bottom:20px;
  text-align: center;
}

.danListInfoButton{
  padding-top: 5px;
  padding-bottom:5px;
  border-radius: 10px;
  text-align: center;
  background:rgba(255,181,0,1);
  display: inline-block;
  padding-left:30px;
  padding-right:30px;
  margin: 10px;
  font-size:20px;
  font-weight: bolder;
}

.personalAttrDataHeader{
	width:30px;
	height:30px;
	display: inline-block;
	color: black;
	font-size: 8px;
