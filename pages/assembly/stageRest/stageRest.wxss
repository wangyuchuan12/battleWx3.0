@import '../attrPlug/attrPlug.wxss';
.stageRest{
  position: fixed;
  z-index: 900000000;
  width:100%;
  height: 100vh;
}
.stageRestMembers{
  width:100%;
}
.stageRestMember{
  width:48%;
  height: 200px;
  background:rgba(129,148,170,0.5);
  border-radius: 5px;
  text-align: center;
  padding-top:20px;
  display: inline-block;
  margin: 0.7%;
}

.stageRestMemberImg{
  width:50px;
  height: 50px;
  border-radius: 50px;
}

.stageRestMemberContentSocre{
  color: white;
}


.stageRestMemberStatus{
  position: relative;
  background:green;
  display: block;
  width:50px;
  margin: 0 auto;
  padding-left:10px;
  padding-right: 10px;
  padding-top:5px;
  padding-bottom:5px;
  border-radius: 5px;
  color: white;
}

.stageReady{
  color: white;
  background:url('http://onluguho9.bkt.clouddn.com/btn-red2.png');
  background-size:100% 100%;
  padding-top:10px;
  padding-bottom: 10px;
  width:150px;
  display: inline-block;
  position: fixed;
  top:50vh;
  z-index: 1000000000;
  left:50%;
  margin-left:-75px;
  border-radius:50px;
  text-align: center;
  font-size: 20px;
  font-weight: bolder;
}

.stageRestMemberLoves{
  display: inline-block;
  width:100%;
}

.stageRestMemberLove{
  width:10px;
  height:10px;
  background:url("http://7xugu1.com1.z0.glb.clouddn.com/lifeLoveSolid.png")no-repeat;
  background-size: 100% 100%;
  display: inline-block;
}

.stageRestMemberHollowLove{
  width:10px;
  height:10px;
  background:url("http://7xugu1.com1.z0.glb.clouddn.com/lifeLoveHollow.png")no-repeat;
  background-size: 75% 60%;
  background-position: 2px 2px;
  display: inline-block;
}

