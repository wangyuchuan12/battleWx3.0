.pkRoom{
  width:100%;
  height:100vh;
  position: fixed;
  z-index: 1000000000000000;
}

.pkRoomTitle{
  color: rgba(255,255,132,0.1);
  text-align: center;
  padding-top:50px;
  font-size:25px;
}

.pkRoomUsers{
  text-align: center;
  padding-top:50px;
}
.pkRoomUser{
  width:100px;
  height:150px;
  background: rgba(19,23,50,0.7);
  border-radius:5px;
  display: inline-block;
  margin: 10px;
  text-align: center;
  vertical-align: top;
  padding-top:10px;
}

.pkRoomUserPlus{
  color: white;
  font-size:50px;
}

.pkRoomUserLabel{
  color: white;
}

.pkRoomUserImg{
  width:80px;
  height:80px;
  border-radius: 10px;
}

.pdRoomUserButton{
  width:80%;
  background: rgba(162,157,251,1);
  border-radius:5px;
  padding-top:2px;
  padding-bottom:2px;
  margin: 0 auto;
  position: relative;
  margin-top:10px;
  color: white;
}

.pkRoomUserPkImg{
  width:80px;
  height:100px;
  display: inline-block;
  margin-top:20px;
}