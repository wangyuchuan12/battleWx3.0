.battleInfoManagerSubjects{
  width:100%;
  padding-bottom:10px;
}

.battleInfoManagerSubject{
  width:30%;
  height:100px;
  display: inline-block;

  vertical-align: top;

  margin: 1%;

  text-align: center;

  position: relative;

 
}

.battleInfoManagerSubjectImg{
  width:100%;
  height:100px;
  display: block;
}

.battleInfoManagerSubjectName{
  color:white;
  text-align: center;
  background:RGBA(33,39,47,0.5);
  display: block;
  position: relative;
  top:-20px;
}

.battleInfoManagerPeriod{
  width:100%;

  height:50px;

  margin: 4px;

  border-bottom:3px solid RGBA(228,239,249,1);

  padding-top:20px;
}

.battleInfoManagerPeriodHeaderName{
  display: inline-block;

  color: black;

  font-size: 20px;

  width:20%;

  text-align: center;
}

.battleInfoManagerPeriodHeaderNum{
  display: inline-block;

  width:60%;

  text-align: right;

  vertical-align: top;

}

.battleInfoManagerPeriodHeaderStatus{
  display: inline-block;


  font-size:10px;
  position: relative;
  font-weight: bolder;

  width:20%;

  text-align: center;

  vertical-align: top;

  padding-top:4px;
}

.battleInfoManagerPeriodAdd{
  text-align: center;

  background:RGBA(255,164,4,1);

  color:white;

  padding-top:10px;

  padding-bottom:10px;

  width:90%;

  border-radius:20px;

  margin: 0 auto;

  margin-top:10px;
}

.battleInfoManagerSubjectAddIcon{
  font-size:50px;
  position: relative;

  top:30px;

  color:green;
}

.battleInfoManagerSubjectDel{
  position: absolute;
  right:2px;
  top:1px;
  z-index:1000;
  font-size:20px;
  background:white;
  padding-top:1px;
  padding-left:1px;
  padding-bottom: 1px;
  padding-right: 1px;
  border-radius:2px;
}