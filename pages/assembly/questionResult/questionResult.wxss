/* questionSelector.wxss */
@import '../questionSelector/questionSelector.wxss';
.questionResult{
  background:RGBA(44,51,59,1);
  width:80%;
  height:60vh;
  position: absolute;
  border:15px solid RGBA(33,39,47,1);
  border-radius:10px;
  text-align: center;
  left:50%;
  margin-left:-44%;
  top:30vh;
}

.questionResultHeader{
  background:RGBA(110,109,110,1);
  padding-top:10px;
  padding-bottom:10px;
}

.questionResultItem{
  width:90%;
  margin: 0 auto;
  text-align: left;

  margin-top:20px;

  border-bottom:1px solid RGBA(33,39,47,1);

  padding-bottom:10px;
}

.questionResultItemImg{
  width:30%;
  height:15vh;
  display:inline-block;

  border-radius:4px;
}

.questionResultItemContent{
  display:inline-block;
  font-size:15px;
  vertical-align: top;
  color:white;
  padding-left:10px;
  width:65%;
  height:15vh;
}

.questionResultItemContentItemOption{
  display:inline-block;
  color:black;
  background-color:white;
  border-radius:4px;

  margin: 2px;

  padding-left:5px;
  padding-right:5px;
  padding-top:1px;
  padding-bottom:1px;
}

.questionResultItemContentItem{
  overflow-y: scroll;
  max-height:50px;
}

.questionResultItemContentItemFill{
  display:inline-block;
  margin: 2px;

  padding:4px;

  background-color:black;

  border-radius:2px;
}

.questionResultItemContentItemAnswer{
  background:white;

  border-radius:5px;

  color:black;

  padding-left:5px;
  width:100px;
  text-align: center;
}

.questionResultButtons{
  top:17px;
  width:100%;
  position:relative;
}

.questionResultButton{
  background:white;
  color:black;

  border-radius:5px;

  height:50px;

  width:100px;
 
  float:right;

  padding-top:15px;

  font-size:20px;

  font-weight: bolder;

  margin-left:10px;
}

.questionResultButton2{
  width:100%;
  border-radius:5px;
  text-align: center;
  background:RGBA(33,39,47,1);
  color:white;
  height:50px;
  padding-top:15px;

  font-size:20px;

  font-weight: bolder;
}